<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="10dp" >

    <ImageView
        android:id="@+id/imageViewGuest"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/titleGuestItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewGuest"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleGuestItem"
        android:layout_above="@+id/priceTextView"
        android:text="Price:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/priceLabel"
        android:layout_alignBottom="@+id/imageViewGuest"
        android:text="$1000.00"
        android:textColor="@android:color/black"/>

    <CheckBox
        android:id="@+id/checkBoxGuest"
        style="@android:style/Widget.Holo.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_alignTop="@+id/priceLabel"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:clickable="false"/>

</RelativeLayout>